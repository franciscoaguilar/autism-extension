{
"name": "autism accessibility extension",
"options_page": "options.html",
"permissions": ["activeTab","declarativeContent", "storage", "fontSettings", "webNavigation", "*://*/*"],
"version": "1.0",
"description": " extension for making web pages more accessible for autistic people",
"icons": { },

"background": {
  "scripts": ["background.js"],
  "persistent": false
},

"page_action": {
 "default_popup": "options.html",
 "default_icon": {}
},

 "manifest_version": 2,
 "content_scripts": [
   {
   "js": ["console-log.js", "font-color.js","dim-color.js"],
   "matches": ["https://*/*"],
   "run_at": "document_end",
   "all_frames": true
    }
  ]
  }
